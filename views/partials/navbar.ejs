<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <i class="fas fa-bolt text-warning"></i> <strong>QuickCart</strong>
      </a>

      <!-- Hamburger toggle -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar collapsible content -->
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav ms-lg-auto d-flex flex-column flex-lg-row align-items-lg-center gap-2 gap-lg-3">


          <% if (!user || (user && user.role === "user")) { %>
            <li class="nav-item dropdown">
              <a class="btn btn-outline-dark dropdown-toggle w-100 text-start text-lg-center" href="#" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-map-marker-alt me-1"></i>
                <%= selectedLocation || "Hyderabad" %>
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/set-location?loc=hyderabad">Hyderabad</a></li>
                <li><a class="dropdown-item" href="/set-location?loc=bengaluru">Bengaluru</a></li>
                <li><a class="dropdown-item" href="/set-location?loc=mumbai">Mumbai</a></li>
                <li><a class="dropdown-item" href="/set-location?loc=delhi">Delhi</a></li>
              </ul>
            </li>
          <% } %>

          <% if (user) { %>
            <% if (user.role === "user") { %>
              <li class="nav-item">
                <a href="/cart" class="btn btn-outline-secondary position-relative w-100 text-start text-lg-center">
                  <i class="fas fa-shopping-cart"></i> Cart
                  <% if (cartItemCount > 0) { %>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                      <%= cartItemCount %>
                    </span>
                  <% } %>
                </a>
              </li>
            <% } %>

            <% if (user.role === "seller") { %>
              <li class="nav-item">
                <a href="/seller/add-product" class="btn btn-outline-success w-100 text-start text-lg-center">Add Product</a>
              </li>
            <% } %>

            <li class="nav-item dropdown">
              <a class="d-flex align-items-center text-decoration-none dropdown-toggle w-100" href="#" data-bs-toggle="dropdown">
                <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="User" class="rounded-circle me-2" width="32">
                <strong><%= user.name %></strong>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="/trackorders"><i class="fas fa-shopping-bag me-2"></i>Your Orders</a></li>
                <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a href="/login" class="btn btn-outline-primary w-100 text-start text-lg-center">Login</a>
            </li>
            <li class="nav-item">
              <a href="/signup" class="btn btn-primary w-100 text-start text-lg-center">Sign Up</a>
            </li>
          <% } %>

        </ul>
      </div>
    </div>
  </nav>
</header>
